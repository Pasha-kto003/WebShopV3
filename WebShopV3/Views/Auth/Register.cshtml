@model WebShopV3.Models.User
@{
    ViewData["Title"] = "Регистрация";
}

<div class="min-h-screen bg-dark pt-20">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Заголовок -->
        <div class="text-center mb-12">
            <div class="w-20 h-20 bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-6 register-icon">
                <svg class="w-10 h-10 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                </svg>
            </div>
            <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">
                Регистрация
            </h1>
            <p class="text-xl text-gray-400">
                Создайте новый аккаунт GameTech
            </p>
        </div>

        <!-- Карточка формы -->
        <div class="bg-dark-card rounded-2xl p-8 border border-gray-800 shadow-2xl register-form">
            <form asp-action="Register" method="post" class="space-y-6" id="registerForm">
                <!-- Строка с Username и Email -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Поле имени пользователя -->
                    <div>
                        <label asp-for="Username" class="block text-sm font-semibold text-gray-300 mb-2">
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                            Имя пользователя *
                        </label>
                        <input asp-for="Username" 
                               class="w-full bg-dark border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:border-primary focus:ring-1 focus:ring-primary transition duration-200 register-input"
                               placeholder="Введите имя пользователя"/>
                        <span asp-validation-for="Username" class="text-red-400 text-sm mt-1 block"></span>
                    </div>

                    <!-- Поле email -->
                    <div>
                        <label asp-for="Email" class="block text-sm font-semibold text-gray-300 mb-2">
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                            Email *
                        </label>
                        <input asp-for="Email" 
                               class="w-full bg-dark border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:border-primary focus:ring-1 focus:ring-primary transition duration-200 register-input"
                               placeholder="Введите ваш email"/>
                        <span asp-validation-for="Email" class="text-red-400 text-sm mt-1 block"></span>
                    </div>
                </div>

                <!-- Поле пароля -->
                <div>
                    <label asp-for="PasswordHash" class="block text-sm font-semibold text-gray-300 mb-2">
                        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                        </svg>
                        Пароль *
                    </label>
                    <input asp-for="PasswordHash" type="password" 
                           class="w-full bg-dark border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:border-primary focus:ring-1 focus:ring-primary transition duration-200 register-input"
                           placeholder="Введите пароль"/>
                    <span asp-validation-for="PasswordHash" class="text-red-400 text-sm mt-1 block"></span>
                </div>

                <!-- Строка с Именем и Фамилией -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Поле имени -->
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-semibold text-gray-300 mb-2">
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                            Имя
                        </label>
                        <input asp-for="FirstName" 
                               class="w-full bg-dark border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:border-primary focus:ring-1 focus:ring-primary transition duration-200 register-input"
                               placeholder="Введите ваше имя"/>
                        <span asp-validation-for="FirstName" class="text-red-400 text-sm mt-1 block"></span>
                    </div>

                    <!-- Поле фамилии -->
                    <div>
                        <label asp-for="LastName" class="block text-sm font-semibold text-gray-300 mb-2">
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                            Фамилия
                        </label>
                        <input asp-for="LastName" 
                               class="w-full bg-dark border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:border-primary focus:ring-1 focus:ring-primary transition duration-200 register-input"
                               placeholder="Введите вашу фамилию"/>
                        <span asp-validation-for="LastName" class="text-red-400 text-sm mt-1 block"></span>
                    </div>
                </div>

                <!-- Поле телефона -->
                <div>
                    <label asp-for="Phone" class="block text-sm font-semibold text-gray-300 mb-2">
                        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                        </svg>
                        Телефон
                    </label>
                    <input asp-for="Phone" 
                           class="w-full bg-dark border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:border-primary focus:ring-1 focus:ring-primary transition duration-200 register-input"
                           placeholder="Введите номер телефона"/>
                    <span asp-validation-for="Phone" class="text-red-400 text-sm mt-1 block"></span>
                </div>

                <!-- Сообщения об ошибках валидации модели -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="bg-red-500/20 border border-red-500/30 rounded-lg p-4 validation-errors">
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <span class="text-red-400 text-sm font-semibold">Ошибка регистрации</span>
                        </div>
                        <div class="text-red-300 text-sm mt-2">
                            @Html.ValidationSummary(true)
                        </div>
                    </div>
                }

                <!-- Кнопка регистрации -->
                <button type="submit" 
                        class="w-full bg-gradient-to-r from-primary to-green-400 text-dark py-4 rounded-lg font-bold text-lg hover:shadow-lg hover:shadow-primary/25 transition duration-300 flex items-center justify-center register-submit">
                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                    </svg>
                    Зарегистрироваться
                </button>

                <!-- Ссылка на вход -->
                <div class="text-center pt-4 border-t border-gray-700">
                    <p class="text-gray-400">
                        Уже есть аккаунт? 
                        <a asp-action="Login" class="text-primary hover:text-green-400 transition duration-200 font-semibold ml-1 login-link">
                            Войдите
                        </a>
                    </p>
                </div>
            </form>
        </div>

        <!-- Дополнительная информация -->
        <div class="mt-8 text-center">
            <div class="grid grid-cols-3 gap-6 text-xs text-gray-400 mb-6">
                <div class="flex items-center justify-center">
                    <svg class="w-4 h-4 mr-1 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                    Безопасно
                </div>
                <div class="flex items-center justify-center">
                    <svg class="w-4 h-4 mr-1 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                    </svg>
                    Защита данных
                </div>
                <div class="flex items-center justify-center">
                    <svg class="w-4 h-4 mr-1 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Поддержка 24/7
                </div>
            </div>
            
            <p class="text-gray-500 text-sm">
                © 2024 GameTech PCs. Все права защищены.
            </p>
        </div>
    </div>
</div>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
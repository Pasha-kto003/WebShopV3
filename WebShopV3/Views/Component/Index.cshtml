@model IEnumerable<WebShopV3.Models.Component>
@{
    ViewData["Title"] = "Комплектующие";
}

<div class="min-h-screen bg-dark pt-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Заголовок -->
        <div class="text-center mb-12">
            <div class="w-20 h-20 bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-10 h-10 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
                </svg>
            </div>
            <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">
                Комплектующие
            </h1>
            <p class="text-xl text-gray-400">
                Управление комплектующими для сборки компьютеров
            </p>
        </div>

        <!-- Карточка с таблицей -->
        <div class="bg-dark-card rounded-2xl p-8 border border-gray-800 shadow-2xl mb-8">
            <!-- Заголовок и кнопка добавления -->
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
                <div>
                    <h2 class="text-2xl font-bold text-white">Список комплектующих</h2>
                    <p class="text-gray-400 mt-1">Всего комплектующих: @Model.Count()</p>
                </div>
                <a asp-action="Create" 
                   class="bg-gradient-to-r from-primary to-green-400 text-dark py-3 px-6 rounded-lg font-bold hover:shadow-lg hover:shadow-primary/25 transition duration-300 flex items-center justify-center whitespace-nowrap">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                    </svg>
                    Добавить комплектующее
                </a>
            </div>

            <!-- Таблица -->
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-gray-700">
                            <th class="text-left py-4 px-4 text-gray-400 font-semibold">Название</th>
                            <th class="text-left py-4 px-4 text-gray-400 font-semibold">Тип</th>
                            <th class="text-left py-4 px-4 text-gray-400 font-semibold">Описание</th>
                            <th class="text-right py-4 px-4 text-gray-400 font-semibold">Цена</th>
                            <th class="text-center py-4 px-4 text-gray-400 font-semibold">Количество</th>
                            <th class="text-right py-4 px-4 text-gray-400 font-semibold">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-b border-gray-800 hover:bg-gray-800/50 transition duration-200 group">
                                <td class="py-4 px-4">
                                    <div class="flex items-center">
                                        <div class="w-8 h-8 bg-primary/20 rounded-full flex items-center justify-center mr-3">
                                            <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
                                            </svg>
                                        </div>
                                        <span class="text-white font-medium">@item.Name</span>
                                    </div>
                                </td>
                                <td class="py-4 px-4">
                                    <span class="@GetTypeBadgeClass(item.Type) px-3 py-1 rounded-full text-xs font-bold">
                                        @GetTypeDisplayName(item.Type)
                                    </span>
                                </td>
                                <td class="py-4 px-4 text-gray-300 max-w-xs">
                                    <div class="truncate" title="@item.Description">
                                        @(string.IsNullOrEmpty(item.Description) ? "—" : item.Description)
                                    </div>
                                </td>
                                <td class="py-4 px-4 text-right text-primary font-semibold">
                                    @item.Price.ToString("C")
                                </td>
                                <td class="py-4 px-4 text-center">
                                    <span class="@GetQuantityBadgeClass(item.Quantity) px-3 py-1 rounded-full text-xs font-bold">
                                        @item.Quantity шт.
                                    </span>
                                </td>
                                <td class="py-4 px-4">
                                    <div class="flex justify-end space-x-2 opacity-0 group-hover:opacity-100 transition duration-200">
                                        <a asp-action="Details" asp-route-id="@item.Id" 
                                           class="bg-blue-500/20 text-blue-400 p-2 rounded-lg hover:bg-blue-500/30 transition duration-200"
                                           title="Подробнее">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" 
                                           class="bg-yellow-500/20 text-yellow-400 p-2 rounded-lg hover:bg-yellow-500/30 transition duration-200"
                                           title="Редактировать">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                            </svg>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" 
                                           class="bg-red-500/20 text-red-400 p-2 rounded-lg hover:bg-red-500/30 transition duration-200"
                                           title="Удалить">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Пустое состояние -->
            @if (!Model.Any())
            {
                <div class="text-center py-12">
                    <svg class="w-16 h-16 text-gray-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <p class="text-gray-400 text-lg mb-4">Комплектующие не найдены</p>
                    <a asp-action="Create" 
                       class="bg-gradient-to-r from-primary to-green-400 text-dark py-2 px-6 rounded-lg font-bold hover:shadow-lg hover:shadow-primary/25 transition duration-300 inline-flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                        </svg>
                        Добавить первое комплектующее
                    </a>
                </div>
            }
        </div>

        <!-- Статистика -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-dark-card rounded-2xl p-6 border border-gray-800">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
                        </svg>
                    </div>
                    <div>
                        <p class="text-gray-400 text-sm">Всего позиций</p>
                        <p class="text-white text-2xl font-bold">@Model.Count()</p>
                    </div>
                </div>
            </div>

            <div class="bg-dark-card rounded-2xl p-6 border border-gray-800">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-green-500/20 rounded-lg flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                        </svg>
                    </div>
                    <div>
                        <p class="text-gray-400 text-sm">Общая стоимость</p>
                        <p class="text-white text-2xl font-bold">@Model.Sum(c => c.Price * c.Quantity).ToString("C")</p>
                    </div>
                </div>
            </div>

            <div class="bg-dark-card rounded-2xl p-6 border border-gray-800">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-yellow-500/20 rounded-lg flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                        </svg>
                    </div>
                    <div>
                        <p class="text-gray-400 text-sm">Всего на складе</p>
                        <p class="text-white text-2xl font-bold">@Model.Sum(c => c.Quantity) шт.</p>
                    </div>
                </div>
            </div>

            <div class="bg-dark-card rounded-2xl p-6 border border-gray-800">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-purple-500/20 rounded-lg flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                        </svg>
                    </div>
                    <div>
                        <p class="text-gray-400 text-sm">Типов комплектующих</p>
                        <p class="text-white text-2xl font-bold">@Model.Select(c => c.Type).Distinct().Count()</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Дополнительная информация -->
        <div class="mt-8 text-center">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-sm text-gray-400 mb-6">
                <div class="flex items-center justify-center">
                    <svg class="w-4 h-4 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                    Гарантия качества
                </div>
                <div class="flex items-center justify-center">
                    <svg class="w-4 h-4 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                    </svg>
                    Быстрая доставка
                </div>
                <div class="flex items-center justify-center">
                    <svg class="w-4 h-4 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Поддержка 24/7
                </div>
            </div>
            
            <p class="text-gray-500 text-sm">
                © 2024 GameTech PCs. Все права защищены.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Анимация появления элементов
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(function(entry) {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-fade-in');
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.bg-dark-card').forEach(function(el) {
                observer.observe(el);
            });

            // Поиск и фильтрация
            const searchInput = document.createElement('input');
            searchInput.type = 'text';
            searchInput.placeholder = 'Поиск комплектующих...';
            searchInput.className = 'w-full bg-dark border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:border-primary focus:ring-1 focus:ring-primary transition duration-200 mb-6';
            
            const table = document.querySelector('table');
            if (table) {
                table.parentNode.insertBefore(searchInput, table);
                
                searchInput.addEventListener('input', function(e) {
                    const searchTerm = e.target.value.toLowerCase();
                    const rows = table.querySelectorAll('tbody tr');
                    
                    rows.forEach(function(row) {
                        const text = row.textContent.toLowerCase();
                        if (text.includes(searchTerm)) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                    });
                });
            }

            // Фильтрация по типу
            const typeFilter = document.createElement('select');
            typeFilter.className = 'w-full bg-dark border border-gray-700 rounded-lg px-4 py-3 text-white focus:border-primary focus:ring-1 focus:ring-primary transition duration-200 mb-4';
            typeFilter.innerHTML = `
                <option value="">Все типы</option>
                <option value="CPU">Процессор</option>
                <option value="GPU">Видеокарта</option>
                <option value="RAM">Оперативная память</option>
                <option value="SSD">SSD накопитель</option>
                <option value="HDD">Жесткий диск</option>
                <option value="MB">Материнская плата</option>
                <option value="PSU">Блок питания</option>
                <option value="Case">Корпус</option>
            `;
            
            if (searchInput && table) {
                searchInput.parentNode.insertBefore(typeFilter, searchInput);
                
                typeFilter.addEventListener('change', function(e) {
                    const selectedType = e.target.value;
                    const rows = table.querySelectorAll('tbody tr');
                    
                    rows.forEach(function(row) {
                        const typeCell = row.querySelector('td:nth-child(2)');
                        if (typeCell) {
                            const typeText = typeCell.textContent.trim();
                            if (!selectedType || typeText === selectedType) {
                                row.style.display = '';
                            } else {
                                row.style.display = 'none';
                            }
                        }
                    });
                });
            }
        });
    </script>

    <style>
        .animate-fade-in {
            animation: fadeIn 0.6s ease-in-out;
        }
        
        table {
            border-collapse: separate;
            border-spacing: 0;
        }
        
        th, td {
            border-bottom: 1px solid #374151;
        }
        
        tr:last-child td {
            border-bottom: none;
        }
        
        @@keyframes fadeIn {
            from { 
                opacity: 0; 
                transform: translateY(20px); 
            }
            to { 
                opacity: 1; 
                transform: translateY(0); 
            }
        }
        
        .truncate {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
    </style>
}

@functions {
    public string GetTypeBadgeClass(string type)
    {
        return type switch
        {
            "CPU" => "bg-blue-500/20 text-blue-400 border border-blue-500/30",
            "GPU" => "bg-purple-500/20 text-purple-400 border border-purple-500/30",
            "RAM" => "bg-green-500/20 text-green-400 border border-green-500/30",
            "SSD" => "bg-yellow-500/20 text-yellow-400 border border-yellow-500/30",
            "HDD" => "bg-orange-500/20 text-orange-400 border border-orange-500/30",
            "MB" => "bg-red-500/20 text-red-400 border border-red-500/30",
            "PSU" => "bg-indigo-500/20 text-indigo-400 border border-indigo-500/30",
            "Case" => "bg-gray-500/20 text-gray-400 border border-gray-500/30",
            _ => "bg-gray-500/20 text-gray-400 border border-gray-500/30"
        };
    }

    public string GetTypeDisplayName(string type)
    {
        return type switch
        {
            "CPU" => "Процессор",
            "GPU" => "Видеокарта",
            "RAM" => "Оперативная память",
            "SSD" => "SSD накопитель",
            "HDD" => "Жесткий диск",
            "MB" => "Материнская плата",
            "PSU" => "Блок питания",
            "Case" => "Корпус",
            _ => type
        };
    }

    public string GetQuantityBadgeClass(int quantity)
    {
        return quantity switch
        {
            0 => "bg-red-500/20 text-red-400 border border-red-500/30",
            < 5 => "bg-yellow-500/20 text-yellow-400 border border-yellow-500/30",
            _ => "bg-green-500/20 text-green-400 border border-green-500/30"
        };
    }
}
@model WebShopV3.Models.Component
@{
    ViewData["Title"] = "Подробности о комплектующем";
}

<div class="min-h-screen bg-dark pt-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Заголовок -->
        <div class="text-center mb-12">
            <div class="w-20 h-20 bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-10 h-10 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
            <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">
                Подробности о комплектующем
            </h1>
            <p class="text-xl text-gray-400">
                Полная информация о комплектующем @Model.Name
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Основная информация -->
            <div class="lg:col-span-2">
                <div class="bg-dark-card rounded-2xl p-8 border border-gray-800 shadow-2xl mb-8">
                    <div class="flex items-center mb-6">
                        <svg class="w-6 h-6 text-primary mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <h2 class="text-2xl font-bold text-white">Основная информация</h2>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Название -->
                        <div class="space-y-1">
                            <label class="block text-sm font-semibold text-gray-400">Название</label>
                            <div class="flex items-center text-white text-lg">
                                <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                                @Model.Name
                            </div>
                        </div>

                        <!-- Тип -->
                        <div class="space-y-1">
                            <label class="block text-sm font-semibold text-gray-400">Тип</label>
                            <div class="flex items-center">
                                <span class="@GetTypeBadgeClass(Model.Type) px-4 py-2 rounded-full text-sm font-bold">
                                    @GetTypeDisplayName(Model.Type)
                                </span>
                            </div>
                        </div>

                        <!-- Цена -->
                        <div class="space-y-1">
                            <label class="block text-sm font-semibold text-gray-400">Цена</label>
                            <div class="flex items-center text-white text-lg">
                                <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                                </svg>
                                @Model.Price.ToString("C")
                            </div>
                        </div>

                        <!-- Количество -->
                        <div class="space-y-1">
                            <label class="block text-sm font-semibold text-gray-400">Количество на складе</label>
                            <div class="flex items-center">
                                <span class="@GetQuantityBadgeClass(Model.Quantity) px-4 py-2 rounded-full text-sm font-bold">
                                    @Model.Quantity шт.
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Описание -->
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="bg-dark-card rounded-2xl p-8 border border-gray-800 shadow-2xl mb-8">
                        <div class="flex items-center mb-6">
                            <svg class="w-6 h-6 text-primary mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <h2 class="text-2xl font-bold text-white">Описание</h2>
                        </div>
                        <p class="text-gray-300 text-lg leading-relaxed">@Model.Description</p>
                    </div>
                }

                <!-- Характеристики -->
                @if (!string.IsNullOrEmpty(Model.Specifications))
                {
                    <div class="bg-dark-card rounded-2xl p-8 border border-gray-800 shadow-2xl">
                        <div class="flex items-center mb-6">
                            <svg class="w-6 h-6 text-primary mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                            </svg>
                            <h2 class="text-2xl font-bold text-white">Технические характеристики</h2>
                        </div>
                        <div class="text-gray-300 leading-relaxed whitespace-pre-line">@Model.Specifications</div>
                    </div>
                }
            </div>

            <!-- Боковая панель -->
            <div class="space-y-6">
                <!-- Действия -->
                <div class="bg-dark-card rounded-2xl p-6 border border-gray-800 shadow-2xl">
                    <h3 class="text-lg font-bold text-white mb-4">Действия</h3>
                    <div class="space-y-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" 
                           class="w-full bg-yellow-500 text-dark py-3 px-4 rounded-lg font-bold hover:bg-yellow-400 transition duration-300 flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                            Редактировать
                        </a>
                        
                        <a asp-action="Index" 
                           class="w-full bg-gray-700 text-white py-3 px-4 rounded-lg font-bold hover:bg-gray-600 transition duration-300 flex items-center justify-center border border-gray-600">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                            </svg>
                            Назад к списку
                        </a>
                    </div>
                </div>

                <!-- Статистика -->
                <div class="bg-dark-card rounded-2xl p-6 border border-gray-800 shadow-2xl">
                    <h3 class="text-lg font-bold text-white mb-4">Статистика</h3>
                    <div class="space-y-3">
                        <div class="flex justify-between items-center">
                            <span class="text-gray-400">ID:</span>
                            <span class="text-white font-semibold">#@Model.Id</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-gray-400">Общая стоимость:</span>
                            <span class="text-primary font-semibold">@((Model.Price * Model.Quantity).ToString("C"))</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-gray-400">Статус:</span>
                            <span class="@GetStatusBadgeClass(Model.Quantity) px-2 py-1 rounded-full text-xs font-bold">
                                @GetStatusText(Model.Quantity)
                            </span>
                        </div>
                        <div class="pt-3 border-t border-gray-700">
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400">Дата добавления:</span>
                                <span class="text-white text-sm">@DateTime.Now.ToString("dd.MM.yyyy")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Информация о типе -->
                <div class="bg-dark-card rounded-2xl p-6 border border-gray-800 shadow-2xl">
                    <h3 class="text-lg font-bold text-white mb-4">Информация о типе</h3>
                    <div class="space-y-2">
                        <div class="flex items-center text-sm text-gray-300">
                            <svg class="w-4 h-4 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                            </svg>
                            @GetTypeDescription(Model.Type)
                        </div>
                    </div>
                </div>

                <!-- Быстрые действия -->
                <div class="bg-dark-card rounded-2xl p-6 border border-gray-800 shadow-2xl">
                    <h3 class="text-lg font-bold text-white mb-4">Быстрые действия</h3>
                    <div class="space-y-2">
                        <button class="w-full bg-blue-500/20 text-blue-400 py-2 px-4 rounded-lg hover:bg-blue-500/30 transition duration-200 flex items-center justify-center text-sm">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                            </svg>
                            Обновить количество
                        </button>
                        <button class="w-full bg-green-500/20 text-green-400 py-2 px-4 rounded-lg hover:bg-green-500/30 transition duration-200 flex items-center justify-center text-sm">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                            </svg>
                            Изменить цену
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Дополнительная информация -->
        <div class="mt-8 text-center">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-sm text-gray-400 mb-6">
                <div class="flex items-center justify-center">
                    <svg class="w-4 h-4 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                    Гарантия качества
                </div>
                <div class="flex items-center justify-center">
                    <svg class="w-4 h-4 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                    </svg>
                    Быстрая доставка
                </div>
                <div class="flex items-center justify-center">
                    <svg class="w-4 h-4 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Поддержка 24/7
                </div>
            </div>
            
            <p class="text-gray-500 text-sm">
                © 2024 GameTech PCs. Все права защищены.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Анимация появления элементов
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(function(entry) {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-fade-in');
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.bg-dark-card').forEach(function(el) {
                observer.observe(el);
            });
        });
    </script>

    <style>
        .animate-fade-in {
            animation: fadeIn 0.6s ease-in-out;
        }
        
        @@keyframes fadeIn {
            from { 
                opacity: 0; 
                transform: translateY(20px); 
            }
            to { 
                opacity: 1; 
                transform: translateY(0); 
            }
        }
        
        .whitespace-pre-line {
            white-space: pre-line;
        }
    </style>
}

@functions {
    public string GetTypeBadgeClass(string type)
    {
        return type switch
        {
            "CPU" => "bg-blue-500/20 text-blue-400 border border-blue-500/30",
            "GPU" => "bg-purple-500/20 text-purple-400 border border-purple-500/30",
            "RAM" => "bg-green-500/20 text-green-400 border border-green-500/30",
            "SSD" => "bg-yellow-500/20 text-yellow-400 border border-yellow-500/30",
            "HDD" => "bg-orange-500/20 text-orange-400 border border-orange-500/30",
            "MB" => "bg-red-500/20 text-red-400 border border-red-500/30",
            "PSU" => "bg-indigo-500/20 text-indigo-400 border border-indigo-500/30",
            "Case" => "bg-gray-500/20 text-gray-400 border border-gray-500/30",
            _ => "bg-gray-500/20 text-gray-400 border border-gray-500/30"
        };
    }

    public string GetTypeDisplayName(string type)
    {
        return type switch
        {
            "CPU" => "Процессор",
            "GPU" => "Видеокарта",
            "RAM" => "Оперативная память",
            "SSD" => "SSD накопитель",
            "HDD" => "Жесткий диск",
            "MB" => "Материнская плата",
            "PSU" => "Блок питания",
            "Case" => "Корпус",
            _ => type
        };
    }

    public string GetTypeDescription(string type)
    {
        return type switch
        {
            "CPU" => "Центральный процессор - основной вычислительный компонент компьютера",
            "GPU" => "Графический процессор - обработка графики и визуальных вычислений",
            "RAM" => "Оперативная память - временное хранение данных для быстрого доступа",
            "SSD" => "Твердотельный накопитель - быстрое энергонезависимое хранилище",
            "HDD" => "Жесткий диск - магнитное хранилище данных большой емкости",
            "MB" => "Материнская плата - основная плата для соединения компонентов",
            "PSU" => "Блок питания - обеспечение электроэнергией всех компонентов",
            "Case" => "Корпус - защита и охлаждение компонентов компьютера",
            _ => "Комплектующее для компьютера"
        };
    }

    public string GetQuantityBadgeClass(int quantity)
    {
        return quantity switch
        {
            0 => "bg-red-500/20 text-red-400 border border-red-500/30",
            < 5 => "bg-yellow-500/20 text-yellow-400 border border-yellow-500/30",
            _ => "bg-green-500/20 text-green-400 border border-green-500/30"
        };
    }

    public string GetStatusBadgeClass(int quantity)
    {
        return quantity switch
        {
            0 => "bg-red-500/20 text-red-400 border border-red-500/30",
            < 5 => "bg-yellow-500/20 text-yellow-400 border border-yellow-500/30",
            _ => "bg-green-500/20 text-green-400 border border-green-500/30"
        };
    }

    public string GetStatusText(int quantity)
    {
        return quantity switch
        {
            0 => "Нет в наличии",
            < 5 => "Мало на складе",
            _ => "В наличии"
        };
    }
}
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Переключение способов оплаты
            const paymentMethods = document.querySelectorAll('input[name="paymentMethod"]');
            const cardDataSection = document.getElementById('cardData');

            paymentMethods.forEach(method => {
                method.addEventListener('change', function() {
                    if (this.value === 'card') {
                        cardDataSection.style.display = 'block';
                    } else {
                        cardDataSection.style.display = 'none';
                    }
                });
            });

            // Форматирование номера карты
            const cardNumberInput = document.querySelector('input[placeholder="0000 0000 0000 0000"]');
            cardNumberInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\s+/g, '').replace(/[^0-9]/gi, '');
                let matches = value.match(/\d{4,16}/g);
                let match = matches && matches[0] || '';
                let parts = [];

                for (let i = 0; i < match.length; i += 4) {
                    parts.push(match.substring(i, i + 4));
                }

                if (parts.length) {
                    e.target.value = parts.join(' ');
                } else {
                    e.target.value = value;
                }
            });

            // Форматирование срока действия
            const expiryInput = document.querySelector('input[placeholder="ММ/ГГ"]');
            expiryInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length >= 2) {
                    e.target.value = value.substring(0, 2) + '/' + value.substring(2, 4);
                }
            });

            // Обработка оплаты
            const payButton = document.getElementById('payButton');
            payButton.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Показываем индикатор загрузки
                payButton.disabled = true;
                payButton.innerHTML = `
                    <div class="inline-block animate-spin rounded-full h-6 w-6 border-b-2 border-dark mr-2"></div>
                    Обработка платежа...
                `;

                // Имитация процесса оплаты
                setTimeout(() => {
                    // В реальном приложении здесь будет запрос к платежному шлюзу
                    showSuccessNotification();
                }, 2000);
            });

            function showSuccessNotification() {
                const notification = document.createElement('div');
                notification.className = 'fixed top-4 right-4 z-50 p-6 bg-green-500/20 border border-green-500/30 text-green-400 rounded-lg backdrop-blur-sm transition-transform duration-300 transform translate-x-full';
                notification.innerHTML = `
                    <div class="flex items-center">
                        <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        <div>
                            <div class="font-bold">Оплата прошла успешно!</div>
                            <div class="text-sm">Заказ #@Model.Id подтвержден</div>
                        </div>
                    </div>
                `;
                
                document.body.appendChild(notification);
                
                setTimeout(() => {
                    notification.classList.remove('translate-x-full');
                }, 100);
                
                // Перенаправление на страницу успеха
                setTimeout(() => {
                    window.location.href = '@Url.Action("OrderSuccess", "Order", new { id = Model.Id })';
                }, 3000);
            }

            // Анимация появления элементов
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-fade-in');
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.bg-dark-card').forEach((el) => {
                observer.observe(el);
            });
        });
    </script>

    <style>
        .animate-fade-in {
            animation: fadeIn 0.6s ease-in-out;
        }
        
        input:focus {
            border-color: #00ff88;
            box-shadow: 0 0 0 2px rgba(0, 255, 136, 0.1);
        }
        
        @@keyframes fadeIn {
            from { 
                opacity: 0; 
                transform: translateY(20px); 
            }
            to { 
                opacity: 1; 
                transform: translateY(0); 
            }
        }
    </style>
}
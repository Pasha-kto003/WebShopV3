@model ErrorViewModel
@{
    ViewData["Title"] = "Ошибка";
}

<div class="min-h-screen bg-dark pt-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Заголовок -->
        <div class="text-center mb-12">
            <div class="w-32 h-32 bg-red-500/20 rounded-full flex items-center justify-center mx-auto mb-8">
                <svg class="w-16 h-16 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                </svg>
            </div>
            <h1 class="text-4xl md:text-5xl font-bold text-red-500 mb-6">
                Ошибка
            </h1>
            <p class="text-xl text-gray-400">
                Произошла ошибка при обработке вашего запроса
            </p>
        </div>

        <!-- Основная карточка с информацией -->
        <div class="bg-dark-card rounded-2xl p-8 border border-gray-800 shadow-2xl mb-8">
            <div class="text-center mb-8">
                <h2 class="text-2xl font-bold text-white mb-4">
                    Что-то пошло не так...
                </h2>
                <p class="text-gray-300 text-lg">
                    Наша команда уже уведомлена об ошибке и работает над ее исправлением.
                </p>
            </div>

            <!-- Информация об ошибке -->
            <div class="bg-gray-800/50 rounded-xl p-6 border border-gray-700 mb-6">
                <div class="flex items-center mb-4">
                    <svg class="w-6 h-6 text-red-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <h3 class="text-lg font-bold text-white">Информация об ошибке</h3>
                </div>
                
                @if (Model.ShowRequestId)
                {
                    <div class="flex items-center justify-between p-4 bg-gray-900/50 rounded-lg mb-4">
                        <span class="text-gray-400 font-medium">ID запроса:</span>
                        <code class="text-red-400 font-mono text-sm bg-gray-800 px-3 py-1 rounded">@Model.RequestId</code>
                    </div>
                }

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                    <div class="flex justify-between items-center p-3 bg-gray-900/30 rounded-lg">
                        <span class="text-gray-400">Время:</span>
                        <span class="text-white">@DateTime.Now.ToString("HH:mm:ss")</span>
                    </div>
                    <div class="flex justify-between items-center p-3 bg-gray-900/30 rounded-lg">
                        <span class="text-gray-400">Дата:</span>
                        <span class="text-white">@DateTime.Now.ToString("dd.MM.yyyy")</span>
                    </div>
                </div>
            </div>

            <!-- Рекомендации -->
            <div class="bg-blue-500/10 border border-blue-500/30 rounded-xl p-6">
                <div class="flex items-start">
                    <svg class="w-6 h-6 text-blue-400 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <div>
                        <h4 class="text-blue-400 font-bold text-lg mb-2">Что можно сделать?</h4>
                        <ul class="text-blue-300 space-y-2">
                            <li class="flex items-center">
                                <span class="w-2 h-2 bg-blue-400 rounded-full mr-3"></span>
                                Обновите страницу и попробуйте снова
                            </li>
                            <li class="flex items-center">
                                <span class="w-2 h-2 bg-blue-400 rounded-full mr-3"></span>
                                Вернитесь на предыдущую страницу
                            </li>
                            <li class="flex items-center">
                                <span class="w-2 h-2 bg-blue-400 rounded-full mr-3"></span>
                                Если ошибка повторяется, свяжитесь с поддержкой
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Кнопки действий -->
        <div class="bg-dark-card rounded-2xl p-8 border border-gray-800 shadow-2xl">
            <div class="flex flex-col sm:flex-row gap-4">
                <button onclick="history.back()" 
                        class="bg-gradient-to-r from-blue-500 to-blue-400 text-gray-900 py-4 px-8 rounded-lg font-bold text-lg hover:shadow-lg hover:shadow-blue-500/25 transition duration-300 flex items-center justify-center flex-1">
                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Назад
                </button>
                
                <a href="/" 
                   class="bg-gray-700 text-white py-4 px-8 rounded-lg font-bold text-lg hover:bg-gray-600 transition duration-300 flex items-center justify-center border border-gray-600">
                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                    </svg>
                    На главную
                </a>

                <a href="/Contact" 
                   class="bg-gradient-to-r from-green-500 to-green-400 text-gray-900 py-4 px-8 rounded-lg font-bold text-lg hover:shadow-lg hover:shadow-green-500/25 transition duration-300 flex items-center justify-center flex-1">
                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                    Связаться с поддержкой
                </a>
            </div>
        </div>

        <!-- Информация для разработчика -->
        @if (Model.ShowRequestId)
        {
            <div class="bg-dark-card rounded-2xl p-8 border border-gray-800 shadow-2xl mt-8">
                <div class="flex items-center mb-4">
                    <svg class="w-6 h-6 text-yellow-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <h3 class="text-lg font-bold text-white">Информация для разработчиков</h3>
                </div>
                
                <div class="bg-yellow-500/10 border border-yellow-500/30 rounded-xl p-6">
                    <div class="mb-4">
                        <h4 class="text-yellow-400 font-bold mb-2">Режим разработки</h4>
                        <p class="text-yellow-300 text-sm mb-3">
                            Переключение в <strong>Development</strong> среду отобразит более подробную информацию об ошибке.
                        </p>
                    </div>
                    
                    <div class="mb-4">
                        <h4 class="text-yellow-400 font-bold mb-2">Предупреждение безопасности</h4>
                        <p class="text-yellow-300 text-sm mb-3">
                            <strong>Не включайте режим разработки в продакшене!</strong> Это может привести к отображению 
                            чувствительной информации из исключений конечным пользователям.
                        </p>
                    </div>
                    
                    <div>
                        <h4 class="text-yellow-400 font-bold mb-2">Для локальной отладки:</h4>
                        <div class="bg-gray-900 rounded-lg p-4">
                            <code class="text-green-400 text-sm">
                                set ASPNETCORE_ENVIRONMENT=Development
                            </code>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Дополнительная информация -->
        <div class="mt-8 text-center">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-sm text-gray-400 mb-6">
                <div class="flex items-center justify-center">
                    <svg class="w-4 h-4 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                    Безопасность
                </div>
                <div class="flex items-center justify-center">
                    <svg class="w-4 h-4 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                    </svg>
                    Мониторинг
                </div>
                <div class="flex items-center justify-center">
                    <svg class="w-4 h-4 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Поддержка 24/7
                </div>
            </div>
            
            <p class="text-gray-500 text-sm">
                © 2024 GameTech PCs. Все права защищены.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Анимация появления элементов
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(function(entry) {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-fade-in');
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.bg-dark-card').forEach(function(el) {
                observer.observe(el);
            });

            // Пульсирующая анимация для иконки ошибки
            const errorIcon = document.querySelector('.w-32.h-32');
            if (errorIcon) {
                setInterval(function() {
                    errorIcon.classList.toggle('bg-red-500/20');
                    errorIcon.classList.toggle('bg-red-500/30');
                }, 2000);
            }
        });
    </script>

    <style>
        .animate-fade-in {
            animation: fadeIn 0.6s ease-in-out;
        }
        
        .bg-red-500\\/20 {
            transition: background-color 1s ease-in-out;
        }
        
        .bg-red-500\\/30 {
            transition: background-color 1s ease-in-out;
        }
        
        @@keyframes fadeIn {
            from { 
                opacity: 0; 
                transform: translateY(20px); 
            }
            to { 
                opacity: 1; 
                transform: translateY(0); 
            }
        }
    </style>
}
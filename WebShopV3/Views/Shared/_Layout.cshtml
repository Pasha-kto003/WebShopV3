@using System.Security.Claims
<!DOCTYPE html>
<html lang="ru" class="h-full dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameTech PCs</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="~/css/site.css" />
    
    <!-- Alpine.js -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        primary: '#00ff88',
                        secondary: '#0099ff', 
                        accent: '#ff3366',
                        dark: '#0a0a0a',
                        'dark-card': '#1a1a1a',
                        'admin-sidebar': '#1f2937'
                    }
                }
            }
        }
    </script>
</head>
<body class="h-full bg-dark text-gray-100" x-data="{ adminPanelOpen: false, mobileMenuOpen: false }">
    <!-- Основная навигация -->
    <nav class="bg-dark-card border-b border-gray-800 sticky top-0 z-30">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <a href="/" class="flex-shrink-0 flex items-center">
                        <div class="w-8 h-8 bg-gradient-to-r from-primary to-secondary rounded-lg flex items-center justify-center">
                            <span class="text-dark font-bold text-sm">GT</span>
                        </div>
                        <span class="ml-2 text-xl font-bold text-white">GameTech</span>
                    </a>
                    
                    <!-- Desktop Navigation -->
                    <div class="hidden md:ml-6 md:flex md:items-center md:space-x-4">
                        <a asp-controller="Home" asp-action="Index" class="text-gray-300 hover:text-primary px-3 py-2 rounded-md text-sm font-medium transition duration-300 flex items-center">
                            <i class="bi bi-house mr-1"></i> Главная
                        </a>
                        <a asp-controller="Home" asp-action="Catalog" class="text-gray-300 hover:text-primary px-3 py-2 rounded-md text-sm font-medium transition duration-300 flex items-center">
                            <i class="bi bi-grid mr-1"></i> Каталог
                        </a>
                        <a asp-controller="Cart" asp-action="Index" class="text-gray-300 hover:text-primary px-3 py-2 rounded-md text-sm font-medium transition duration-300 flex items-center">
                            <i class="bi bi-cart3 mr-1"></i> Корзина
                            <span id="cart-counter" class="ml-1 bg-primary text-dark rounded-full w-5 h-5 flex items-center justify-center text-xs font-bold" style="display: none;">0</span>
                        </a>
                        <a asp-controller="Home" asp-action="About" class="text-gray-300 hover:text-primary px-3 py-2 rounded-md text-sm font-medium transition duration-300 flex items-center">
                            <i class="bi bi-question-circle mr-1"></i> О сайте
                        </a>
                    </div>
                </div>
        
                <!-- User Menu Desktop -->
                <div class="hidden md:flex md:items-center md:space-x-4">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="relative" x-data="{ open: false }">
                            <button @@click="open = !open" class="flex items-center text-sm text-white hover:text-primary transition duration-300">
                                <i class="bi bi-person-circle mr-2"></i>
                                @User.Identity.Name
                                @if (User.IsInRole("Админ"))
                                {
                                    <span class="ml-2 bg-red-500 text-white rounded-full px-2 py-1 text-xs font-bold">Админ</span>
                                }
                                else if (User.IsInRole("Менеджер"))
                                {
                                    <span class="ml-2 bg-yellow-500 text-dark rounded-full px-2 py-1 text-xs font-bold">Менеджер</span>
                                }
                                else
                                {
                                    <span class="ml-2 bg-blue-500 text-white rounded-full px-2 py-1 text-xs font-bold">Пользователь</span>
                                }
                                <i class="bi bi-chevron-down ml-1"></i>
                            </button>
                            
                            <div x-show="open" @@click.outside="open = false" 
                                 class="absolute right-0 mt-2 w-48 bg-dark-card border border-gray-700 rounded-lg shadow-lg py-1 z-50">
                                <a asp-controller="Auth" asp-action="Profile" class="flex items-center px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-700 transition duration-200">
                                    <i class="bi bi-person mr-2"></i> Личный кабинет
                                </a>
                                <a asp-controller="Order" asp-action="MyOrders" class="flex items-center px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-700 transition duration-200">
                                    <i class="bi bi-bag-check mr-2"></i> Мои заказы
                                </a>
                                <a asp-controller="Order" asp-action="Create" class="flex items-center px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-700 transition duration-200">
                                    <i class="bi bi-plus-circle mr-2"></i> Создать заказ
                                </a>
                                
                                @if (User.IsInRole("Админ") || User.IsInRole("Менеджер"))
                                {
                                    <div class="border-t border-gray-700 my-1"></div>
                                    <a asp-controller="Order" asp-action="Index" class="flex items-center px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-700 transition duration-200">
                                        <i class="bi bi-list-check mr-2"></i> Все заказы
                                    </a>
                                }
                                
                                @if (User.IsInRole("Админ"))
                                {
                                    <a asp-controller="Computer" asp-action="Index" class="flex items-center px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-700 transition duration-200">
                                        <i class="bi bi-gear mr-2"></i> Управление компьютерами
                                    </a>
                                    <a asp-controller="Component" asp-action="Index" class="flex items-center px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-700 transition duration-200">
                                        <i class="bi bi-tools mr-2"></i> Управление комплектующими
                                    </a>
                                    <a asp-controller="User" asp-action="Index" class="flex items-center px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-700 transition duration-200">
                                        <i class="bi bi-people mr-2"></i> Управление пользователями
                                    </a>
                                }
                                
                                <div class="border-t border-gray-700 my-1"></div>
                                <a asp-controller="Auth" asp-action="Logout" class="flex items-center px-4 py-2 text-gray-300 hover:text-white hover:bg-gray-700 transition duration-200">
                                    <i class="bi bi-box-arrow-right mr-2"></i> Выйти
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Auth" asp-action="Login" class="text-gray-300 hover:text-primary px-3 py-2 rounded-md text-sm font-medium transition duration-300 flex items-center">
                            <i class="bi bi-box-arrow-in-right mr-1"></i> Вход
                        </a>
                        <a asp-controller="Auth" asp-action="Register" class="bg-primary text-dark px-4 py-2 rounded-md text-sm font-bold hover:bg-green-400 transition duration-300 flex items-center">
                            <i class="bi bi-person-plus mr-1"></i> Регистрация
                        </a>
                    }
                </div>

                <!-- Mobile menu button -->
                <div class="md:hidden flex items-center">
                    <button @@click="mobileMenuOpen = !mobileMenuOpen" class="text-gray-300 hover:text-white">
                        <i class="bi bi-list w-6 h-6"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile Navigation -->
        <div x-show="mobileMenuOpen" class="md:hidden border-t border-gray-700">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <a asp-controller="Home" asp-action="Index" class="flex items-center text-gray-300 hover:text-white hover:bg-gray-700 px-3 py-2 rounded-md">
                    <i class="bi bi-house mr-2"></i> Главная
                </a>
                <a asp-controller="Home" asp-action="Catalog" class="flex items-center text-gray-300 hover:text-white hover:bg-gray-700 px-3 py-2 rounded-md">
                    <i class="bi bi-grid mr-2"></i> Каталог
                </a>
                <a asp-controller="Cart" asp-action="Index" class="flex items-center text-gray-300 hover:text-white hover:bg-gray-700 px-3 py-2 rounded-md">
                    <i class="bi bi-cart3 mr-2"></i> Корзина
                    <span id="cart-counter-mobile" class="ml-auto bg-primary text-dark rounded-full w-5 h-5 flex items-center justify-center text-xs font-bold" style="display: none;">0</span>
                </a>
                
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="border-t border-gray-700 pt-2 mt-2">
                        <a asp-controller="Auth" asp-action="Profile" class="flex items-center text-gray-300 hover:text-white hover:bg-gray-700 px-3 py-2 rounded-md">
                            <i class="bi bi-person mr-2"></i> Личный кабинет
                        </a>
                        <a asp-controller="Order" asp-action="MyOrders" class="flex items-center text-gray-300 hover:text-white hover:bg-gray-700 px-3 py-2 rounded-md">
                            <i class="bi bi-bag-check mr-2"></i> Мои заказы
                        </a>
                        <a asp-controller="Auth" asp-action="Logout" class="flex items-center text-gray-300 hover:text-white hover:bg-gray-700 px-3 py-2 rounded-md">
                            <i class="bi bi-box-arrow-right mr-2"></i> Выйти
                        </a>
                    </div>
                }
                else
                {
                    <div class="border-t border-gray-700 pt-2 mt-2">
                        <a asp-controller="Auth" asp-action="Login" class="flex items-center text-gray-300 hover:text-white hover:bg-gray-700 px-3 py-2 rounded-md">
                            <i class="bi bi-box-arrow-in-right mr-2"></i> Вход
                        </a>
                        <a asp-controller="Auth" asp-action="Register" class="flex items-center text-gray-300 hover:text-white hover:bg-gray-700 px-3 py-2 rounded-md">
                            <i class="bi bi-person-plus mr-2"></i> Регистрация
                        </a>
                    </div>
                }
            </div>
        </div>
    </nav>

    <!-- Основной контент -->
    <main class="flex-grow">
        <!-- Уведомления -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
                <div class="bg-green-500/20 border border-green-500/30 text-green-500 px-4 py-3 rounded-lg backdrop-blur-sm">
                    <div class="flex items-center">
                        <i class="bi bi-check-circle mr-2"></i>
                        <span>@TempData["SuccessMessage"]</span>
                    </div>
                </div>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
                <div class="bg-red-500/20 border border-red-500/30 text-red-500 px-4 py-3 rounded-lg backdrop-blur-sm">
                    <div class="flex items-center">
                        <i class="bi bi-exclamation-triangle mr-2"></i>
                        <span>@TempData["ErrorMessage"]</span>
                    </div>
                </div>
            </div>
        }

        @RenderBody()
    </main>

    <!-- Футер -->
    <footer class="bg-dark-card border-t border-gray-800 mt-16">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <p class="text-base text-gray-400">
                    &copy; 2024 GameTech PCs. Все права защищены.
                </p>
                <a asp-controller="Home" asp-action="Privacy" class="text-gray-400 hover:text-primary transition duration-300 mt-2 inline-block">
                    Политика конфиденциальности
                </a>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Функции для работы с корзиной
        function addToCart(computerId, quantity = 1, computerName = '') {
            $.post('/Cart/AddToCart', { computerId, quantity })
                .done(function(response) {
                    if (response.success) {
                        showNotification('success', `Товар "${computerName}" добавлен в корзину`);
                        updateCartCounter(response.totalItems);
                    } else {
                        showNotification('error', response.message);
                    }
                })
                .fail(function() {
                    showNotification('error', 'Ошибка при добавлении в корзину');
                });
        }

        function updateCartCounter(count) {
            const cartCounter = $('#cart-counter');
            const cartCounterMobile = $('#cart-counter-mobile');
            
            [cartCounter, cartCounterMobile].forEach(counter => {
                if (counter.length) {
                    counter.text(count);
                    if (count > 0) {
                        counter.show();
                    } else {
                        counter.hide();
                    }
                }
            });
        }

        function showNotification(type, message) {
            const alertClass = type === 'success' ? 'bg-green-500/20 border-green-500/30 text-green-500' : 'bg-red-500/20 border-red-500/30 text-red-500';
            const icon = type === 'success' ? 'bi-check-circle' : 'bi-exclamation-triangle';
            
            const notification = $(`
                <div class="${alertClass} border px-6 py-4 rounded-lg backdrop-blur-sm position-fixed flex items-center" 
                     style="top: 20px; right: 20px; z-index: 1050; min-width: 300px;">
                    <i class="bi ${icon} mr-3"></i> 
                    <span class="flex-1">${message}</span>
                    <button type="button" class="text-current hover:opacity-70 ml-4">
                        <i class="bi bi-x"></i>
                    </button>
                </div>
            `);
            
            $('body').append(notification);
            
            notification.find('button').on('click', function() {
                notification.remove();
            });
            
            setTimeout(() => {
                notification.fadeOut(300, function() {
                    $(this).remove();
                });
            }, 3000);
        }

        // Обновляем счетчик корзины при загрузке страницы
        function loadCartCount() {
            $.get('/Cart/GetCartCount')
                .done(function(data) {
                    updateCartCounter(data.count);
                })
                .fail(function() {
                    console.log('Не удалось загрузить количество товаров в корзине');
                });
        }

        // Обработчики для кнопок "В корзину"
        $(document).ready(function() {
            loadCartCount();
            
            $(document).on('click', '.add-to-cart', function() {
                const computerId = $(this).data('computer-id');
                const computerName = $(this).data('computer-name');
                addToCart(computerId, 1, computerName);
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
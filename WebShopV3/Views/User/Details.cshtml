@model WebShopV3.Models.User
@{
    ViewData["Title"] = "Подробности о пользователе";
}

<div class="min-h-screen bg-dark pt-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Заголовок -->
        <div class="text-center mb-12">
            <div class="w-20 h-20 bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-10 h-10 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
            </div>
            <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">
                Подробности о пользователе
            </h1>
            <p class="text-xl text-gray-400">
                Информация о пользователе системы GameTech
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Основная информация -->
            <div class="lg:col-span-2">
                <div class="bg-dark-card rounded-2xl p-8 border border-gray-800 shadow-2xl mb-8">
                    <div class="flex items-center mb-6">
                        <svg class="w-6 h-6 text-primary mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <h2 class="text-2xl font-bold text-white">Основная информация</h2>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Имя пользователя -->
                        <div class="space-y-1">
                            <label class="block text-sm font-semibold text-gray-400">Имя пользователя</label>
                            <div class="flex items-center text-white text-lg">
                                <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                                @Model.Username
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="space-y-1">
                            <label class="block text-sm font-semibold text-gray-400">Email</label>
                            <div class="flex items-center text-white text-lg">
                                <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                                @Model.Email
                            </div>
                        </div>

                        <!-- Имя -->
                        <div class="space-y-1">
                            <label class="block text-sm font-semibold text-gray-400">Имя</label>
                            <div class="flex items-center text-white text-lg">
                                <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                                @(string.IsNullOrEmpty(Model.FirstName) ? "—" : Model.FirstName)
                            </div>
                        </div>

                        <!-- Фамилия -->
                        <div class="space-y-1">
                            <label class="block text-sm font-semibold text-gray-400">Фамилия</label>
                            <div class="flex items-center text-white text-lg">
                                <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                                @(string.IsNullOrEmpty(Model.LastName) ? "—" : Model.LastName)
                            </div>
                        </div>

                        <!-- Телефон -->
                        <div class="space-y-1">
                            <label class="block text-sm font-semibold text-gray-400">Телефон</label>
                            <div class="flex items-center text-white text-lg">
                                <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                </svg>
                                @(string.IsNullOrEmpty(Model.Phone) ? "—" : Model.Phone)
                            </div>
                        </div>

                        <!-- Роль -->
                        <div class="space-y-1">
                            <label class="block text-sm font-semibold text-gray-400">Роль</label>
                            <div class="flex items-center">
                                <span class="@GetRoleBadgeClass(Model.UserType?.Name) px-4 py-2 rounded-full text-sm font-bold">
                                    @Model.UserType?.Name
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Дополнительная информация -->
                <div class="bg-dark-card rounded-2xl p-8 border border-gray-800 shadow-2xl">
                    <div class="flex items-center mb-6">
                        <svg class="w-6 h-6 text-primary mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        <h2 class="text-2xl font-bold text-white">Дополнительная информация</h2>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-1">
                            <label class="block text-sm font-semibold text-gray-400">ID пользователя</label>
                            <div class="text-white text-lg font-mono">#@Model.Id</div>
                        </div>

                        <div class="space-y-1">
                            <label class="block text-sm font-semibold text-gray-400">Дата регистрации</label>
                            <div class="flex items-center text-white text-lg">
                                <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                                @DateTime.Now.ToString("dd.MM.yyyy")
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Боковая панель -->
            <div class="space-y-6">
                <!-- Действия -->
                <div class="bg-dark-card rounded-2xl p-6 border border-gray-800 shadow-2xl">
                    <h3 class="text-lg font-bold text-white mb-4">Действия</h3>
                    <div class="space-y-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" 
                           class="w-full bg-yellow-500 text-dark py-3 px-4 rounded-lg font-bold hover:bg-yellow-400 transition duration-300 flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                            Редактировать
                        </a>
                        
                        <a asp-action="Index" 
                           class="w-full bg-gray-700 text-white py-3 px-4 rounded-lg font-bold hover:bg-gray-600 transition duration-300 flex items-center justify-center border border-gray-600">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                            </svg>
                            Назад к списку
                        </a>
                    </div>
                </div>

                <!-- Статистика -->
                <div class="bg-dark-card rounded-2xl p-6 border border-gray-800 shadow-2xl">
                    <h3 class="text-lg font-bold text-white mb-4">Статистика</h3>
                    <div class="space-y-3">
                        <div class="flex justify-between items-center">
                            <span class="text-gray-400">Статус:</span>
                            <span class="text-green-400 font-semibold">Активен</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-gray-400">Верификация:</span>
                            <span class="text-green-400 font-semibold">Подтвержден</span>
                        </div>
                        <div class="pt-3 border-t border-gray-700">
                            <div class="flex justify-between items-center">
                                <span class="text-gray-400">Последняя активность:</span>
                                <span class="text-white text-sm">Сегодня</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Быстрые действия -->
                <div class="bg-dark-card rounded-2xl p-6 border border-gray-800 shadow-2xl">
                    <h3 class="text-lg font-bold text-white mb-4">Быстрые действия</h3>
                    <div class="space-y-2">
                        <button class="w-full bg-blue-500/20 text-blue-400 py-2 px-4 rounded-lg hover:bg-blue-500/30 transition duration-200 flex items-center justify-center text-sm">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                            Отправить email
                        </button>
                        <button class="w-full bg-green-500/20 text-green-400 py-2 px-4 rounded-lg hover:bg-green-500/30 transition duration-200 flex items-center justify-center text-sm">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                            </svg>
                            Пригласить в систему
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Дополнительная информация -->
        <div class="mt-8 text-center">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-sm text-gray-400 mb-6">
                <div class="flex items-center justify-center">
                    <svg class="w-4 h-4 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                    Безопасность данных
                </div>
                <div class="flex items-center justify-center">
                    <svg class="w-4 h-4 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                    </svg>
                    Конфиденциальность
                </div>
                <div class="flex items-center justify-center">
                    <svg class="w-4 h-4 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Поддержка 24/7
                </div>
            </div>
            
            <p class="text-gray-500 text-sm">
                © 2024 GameTech PCs. Все права защищены.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Анимация появления элементов
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(function(entry) {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-fade-in');
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.bg-dark-card').forEach(function(el) {
                observer.observe(el);
            });
        });
    </script>

    <style>
        .animate-fade-in {
            animation: fadeIn 0.6s ease-in-out;
        }
        
        @@keyframes fadeIn {
            from { 
                opacity: 0; 
                transform: translateY(20px); 
            }
            to { 
                opacity: 1; 
                transform: translateY(0); 
            }
        }
    </style>
}

@functions {
    public string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Админ" => "bg-red-500/20 text-red-400 border border-red-500/30",
            "Менеджер" => "bg-yellow-500/20 text-yellow-400 border border-yellow-500/30",
            "Пользователь" => "bg-primary/20 text-primary border border-primary/30",
            _ => "bg-gray-500/20 text-gray-400 border border-gray-500/30"
        };
    }
}
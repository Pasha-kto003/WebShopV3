@model IEnumerable<WebShopV3.Models.User>
@{
    ViewData["Title"] = "Пользователи";
}

<div class="min-h-screen bg-dark pt-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Заголовок -->
        <div class="text-center mb-12">
            <div class="w-20 h-20 bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-10 h-10 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                </svg>
            </div>
            <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">
                Пользователи
            </h1>
            <p class="text-xl text-gray-400">
                Управление пользователями системы GameTech
            </p>
        </div>

        <!-- Карточка с таблицей -->
        <div class="bg-dark-card rounded-2xl p-8 border border-gray-800 shadow-2xl mb-8">
            <!-- Заголовок и кнопка добавления -->
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
                <div>
                    <h2 class="text-2xl font-bold text-white">Список пользователей</h2>
                    <p class="text-gray-400 mt-1">Всего пользователей: @Model.Count()</p>
                </div>
                <a asp-action="Create" 
                   class="bg-gradient-to-r from-primary to-green-400 text-dark py-3 px-6 rounded-lg font-bold hover:shadow-lg hover:shadow-primary/25 transition duration-300 flex items-center justify-center whitespace-nowrap">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                    </svg>
                    Добавить пользователя
                </a>
            </div>

            <!-- Таблица -->
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-gray-700">
                            <th class="text-left py-4 px-4 text-gray-400 font-semibold">Имя пользователя</th>
                            <th class="text-left py-4 px-4 text-gray-400 font-semibold">Email</th>
                            <th class="text-left py-4 px-4 text-gray-400 font-semibold">Имя</th>
                            <th class="text-left py-4 px-4 text-gray-400 font-semibold">Фамилия</th>
                            <th class="text-left py-4 px-4 text-gray-400 font-semibold">Телефон</th>
                            <th class="text-left py-4 px-4 text-gray-400 font-semibold">Роль</th>
                            <th class="text-right py-4 px-4 text-gray-400 font-semibold">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-b border-gray-800 hover:bg-gray-800/50 transition duration-200 group">
                                <td class="py-4 px-4">
                                    <div class="flex items-center">
                                        <div class="w-8 h-8 bg-primary/20 rounded-full flex items-center justify-center mr-3">
                                            <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                            </svg>
                                        </div>
                                        <span class="text-white font-medium">@item.Username</span>
                                    </div>
                                </td>
                                <td class="py-4 px-4 text-gray-300">@item.Email</td>
                                <td class="py-4 px-4 text-gray-300">@item.FirstName</td>
                                <td class="py-4 px-4 text-gray-300">@item.LastName</td>
                                <td class="py-4 px-4 text-gray-300">
                                    @if (!string.IsNullOrEmpty(item.Phone))
                                    {
                                        <div class="flex items-center">
                                            <svg class="w-4 h-4 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                            </svg>
                                            @item.Phone
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-gray-500">—</span>
                                    }
                                </td>
                                <td class="py-4 px-4">
                                    <span class="@GetRoleBadgeClass(item.UserType?.Name) px-3 py-1 rounded-full text-xs font-bold">
                                        @item.UserType?.Name
                                    </span>
                                </td>
                                <td class="py-4 px-4">
                                    <div class="flex justify-end space-x-2 opacity-0 group-hover:opacity-100 transition duration-200">
                                        <a asp-action="Details" asp-route-id="@item.Id" 
                                           class="bg-blue-500/20 text-blue-400 p-2 rounded-lg hover:bg-blue-500/30 transition duration-200"
                                           title="Подробнее">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" 
                                           class="bg-yellow-500/20 text-yellow-400 p-2 rounded-lg hover:bg-yellow-500/30 transition duration-200"
                                           title="Редактировать">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                            </svg>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" 
                                           class="bg-red-500/20 text-red-400 p-2 rounded-lg hover:bg-red-500/30 transition duration-200"
                                           title="Удалить">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Пустое состояние -->
            @if (!Model.Any())
            {
                <div class="text-center py-12">
                    <svg class="w-16 h-16 text-gray-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                    </svg>
                    <p class="text-gray-400 text-lg mb-4">Пользователи не найдены</p>
                    <a asp-action="Create" 
                       class="bg-gradient-to-r from-primary to-green-400 text-dark py-2 px-6 rounded-lg font-bold hover:shadow-lg hover:shadow-primary/25 transition duration-300 inline-flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                        </svg>
                        Добавить первого пользователя
                    </a>
                </div>
            }
        </div>

        <!-- Дополнительная информация -->
        <div class="mt-8 text-center">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-sm text-gray-400 mb-6">
                <div class="flex items-center justify-center">
                    <svg class="w-4 h-4 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                    Безопасность данных
                </div>
                <div class="flex items-center justify-center">
                    <svg class="w-4 h-4 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                    </svg>
                    Контроль доступа
                </div>
                <div class="flex items-center justify-center">
                    <svg class="w-4 h-4 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Поддержка 24/7
                </div>
            </div>
            
            <p class="text-gray-500 text-sm">
                © 2024 GameTech PCs. Все права защищены.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Анимация появления элементов
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-fade-in');
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.bg-dark-card').forEach((el) => {
                observer.observe(el);
            });

            // Поиск и фильтрация (можно расширить функционал)
            const searchInput = document.createElement('input');
            searchInput.type = 'text';
            searchInput.placeholder = 'Поиск пользователей...';
            searchInput.className = 'w-full bg-dark border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:border-primary focus:ring-1 focus:ring-primary transition duration-200 mb-6';
            
            const table = document.querySelector('table');
            if (table) {
                table.parentNode.insertBefore(searchInput, table);
                
                searchInput.addEventListener('input', function(e) {
                    const searchTerm = e.target.value.toLowerCase();
                    const rows = table.querySelectorAll('tbody tr');
                    
                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        if (text.includes(searchTerm)) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                    });
                });
            }
        });
    </script>

    <style>
        .animate-fade-in {
            animation: fadeIn 0.6s ease-in-out;
        }
        
        table {
            border-collapse: separate;
            border-spacing: 0;
        }
        
        th, td {
            border-bottom: 1px solid #374151;
        }
        
        tr:last-child td {
            border-bottom: none;
        }
        
        @@keyframes fadeIn {
            from { 
                opacity: 0; 
                transform: translateY(20px); 
            }
            to { 
                opacity: 1; 
                transform: translateY(0); 
            }
        }
    </style>
}

@functions {
    public string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Админ" => "bg-red-500/20 text-red-400 border border-red-500/30",
            "Менеджер" => "bg-yellow-500/20 text-yellow-400 border border-yellow-500/30",
            "Пользователь" => "bg-primary/20 text-primary border border-primary/30",
            _ => "bg-gray-500/20 text-gray-400 border border-gray-500/30"
        };
    }
}
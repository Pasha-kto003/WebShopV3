@model IEnumerable<WebShopV3.Models.Order>
@{
    ViewData["Title"] = "Заказы";
}

<h1>Заказы</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Создать заказ</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Дата заказа</th>
            <th>Пользователь</th>
            <th>Тип заказа</th>
            <th>Статус</th>
            <th>Сумма</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@item.User?.Username</td>
                <td>@item.OrderType?.Name</td>
                <td>
                    <span class="badge @GetStatusBadgeClass(item.Status?.Name)">@item.Status?.Name</span>
                </td>
                <td>@item.TotalAmount.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Подробнее</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Выполнен" => "bg-success",
            "В ожидании" => "bg-warning",
            "Отменен" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
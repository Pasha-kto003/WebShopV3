<!-- Gaming PCs Section с градиентным фоном -->
<section id="gaming" class="py-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-500/10 via-gray-900 to-green-500/10 animate-gradient-xy"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
                Популярные компьютеры
            </h2>
            <p class="text-xl text-gray-400 max-w-2xl mx-auto">
                Лучшие компьютеры и комплектующие по доступным ценам
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-8">
            @foreach (var computer in Model)
            {
                <div class="bg-gray-900/90 rounded-2xl p-6 border border-gray-800 hover:border-green-500/50 transition duration-300 group backdrop-blur-sm">
                    <div class="relative overflow-hidden rounded-xl mb-4">
                        @if (!string.IsNullOrEmpty(computer.ImageUrl))
                        {
                            <img src="/Images/@computer.ImageUrl" class="w-full h-48 object-cover rounded-xl transition-transform duration-500 group-hover:scale-105" alt="@computer.Name">
                        }
                        else
                        {
                            <div class="w-full h-48 bg-gradient-to-br from-gray-800 to-gray-700 rounded-xl flex items-center justify-center">
                                <span class="text-gray-500">Нет изображения</span>
                            </div>
                        }
                        @if (computer.Price < 150000)
                        {
                            <div class="absolute top-4 right-4 bg-gradient-to-r from-green-500 to-green-400 text-gray-900 px-3 py-1 rounded-full text-sm font-bold">
                                ХИТ
                            </div>
                        }
                    </div>
                    
                    <h3 class="text-xl font-bold text-white mb-2">@computer.Name</h3>
                    <p class="text-gray-400 text-sm mb-4 line-clamp-2">@computer.Description</p>
                    
                    <div class="space-y-2 mb-4">
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-400">В наличии:</span>
                            <span class="text-white">@computer.Quantity шт.</span>
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between mb-4">
                        <div class="text-2xl font-bold text-green-500">@computer.Price.ToString("C")</div>
                    </div>
                    
                    <div class="flex gap-2">
                        <a asp-controller="Home" asp-action="ComputerDetails" asp-route-id="@computer.Id" class="flex-1 bg-gradient-to-r from-green-500 to-green-400 text-gray-900 py-3 rounded-lg font-bold text-center hover:shadow-lg hover:shadow-green-500/25 transition duration-300 group-hover:scale-105">
                            Подробнее
                        </a>
                        <button class="bg-gradient-to-r from-blue-500 to-blue-400 text-gray-900 px-4 py-3 rounded-lg font-bold hover:shadow-lg hover:shadow-blue-500/25 transition duration-300 group-hover:scale-105">
                            🛒
                        </button>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-12">
            <a asp-controller="Home" asp-action="Catalog" class="border-2 border-green-500 text-green-500 px-8 py-4 rounded-lg font-bold text-lg hover:bg-green-500 hover:text-gray-900 transition duration-300 inline-flex items-center">
                👀 Смотреть все компьютеры
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                </svg>
            </a>
        </div>
    </div>
</section>


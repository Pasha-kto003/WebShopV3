@model List<WebShopV3.Models.Computer>
@{
    ViewData["Title"] = "Главная";
}

<div class="text-center mb-5">
    <h1 class="display-4">Добро пожаловать в ComputerShop</h1>
    <p class="lead">Лучшие компьютеры и комплектующие по доступным ценам</p>
</div>

<h2 class="mb-4">Популярные компьютеры</h2>

<div class="row">
    @foreach (var computer in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(computer.ImageUrl))
                {
                    <img src="/Images/@computer.ImageUrl" class="card-img-top" alt="@computer.Name" style="height: 200px; object-fit: cover;">
                }
                else
                {
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                        <span class="text-muted">Нет изображения</span>
                    </div>
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@computer.Name</h5>
                    <p class="card-text flex-grow-1">@computer.Description</p>
                    <div class="mt-auto">
                        <p class="card-text"><strong>@computer.Price.ToString("C")</strong></p>
                        <p class="card-text">
                            <small class="text-muted">В наличии: @computer.Quantity шт.</small>
                        </p>
                        <a href="@Url.Action("ComputerDetails", "Home", new { id = computer.Id })" class="btn btn-primary">Подробнее</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Широкий ассортимент</h5>
                <p class="card-text">Более 1000 товаров в каталоге</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Гарантия качества</h5>
                <p class="card-text">Гарантия на все товары до 3 лет</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Быстрая доставка</h5>
                <p class="card-text">Доставка по всей стране за 1-3 дня</p>
            </div>
        </div>
    </div>
</div>
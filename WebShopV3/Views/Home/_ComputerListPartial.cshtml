@model List<WebShopV3.Models.Computer>

<!-- Вид карточками -->
<div id="cardsView" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3 gap-6">
    @foreach (var computer in Model)
    {
        <div class="computer-card bg-dark-card rounded-2xl p-6 border border-gray-800 hover:border-primary/50 transition duration-300 group">
            <div class="relative overflow-hidden rounded-xl mb-4">
                @if (!string.IsNullOrEmpty(computer.ImageUrl))
                {
                    <div class="w-full h-48 bg-gradient-to-br from-primary/20 to-primary/10 rounded-xl flex items-center justify-center">
                        <img src="/Images/@computer.ImageUrl" alt="@computer.Name" 
                             class="w-full max-h-48 object-contain rounded-xl transition-transform duration-500 group-hover:scale-105"/>
                    </div>
                }
                else
                {
                    <div class="w-full h-48 bg-gradient-to-br from-gray-800 to-gray-700 rounded-xl flex items-center justify-center">
                        <span class="text-gray-500 text-lg">🖥️</span>
                    </div>
                }
                @if (computer.Price < 150000) // Пример условия для метки "ХИТ"
                {
                    <div class="absolute top-4 right-4 bg-gradient-to-r from-primary to-green-400 text-dark px-3 py-1 rounded-full text-sm font-bold">
                        ХИТ
                    </div>
                }
            </div>
            
            <h3 class="text-xl font-bold text-white mb-2">
                <a href="@Url.Action("ComputerDetails", "Home", new { id = computer.Id })" class="hover:text-primary transition duration-200">
                    @computer.Name
                </a>
            </h3>
            <p class="text-gray-400 text-sm mb-4 line-clamp-2">@computer.Description</p>
            
            <div class="space-y-2 mb-4">
                <div class="flex justify-between text-sm">
                    <span class="text-gray-400">В наличии:</span>
                    <span class="text-white">@computer.Quantity шт.</span>
                </div>
            </div>
            
            <div class="flex items-center justify-between mb-4">
                <div class="text-2xl font-bold text-primary">@computer.Price.ToString("C")</div>
            </div>
            
            <button class="w-full bg-gradient-to-r from-primary to-green-400 text-dark py-3 rounded-lg font-bold hover:shadow-lg hover:shadow-primary/25 transition duration-300 group-hover:scale-105 add-to-cart"
                    data-computer-id="@computer.Id" 
                    data-computer-name="@computer.Name">
                В корзину
            </button>
        </div>
    }
</div>

<!-- Вид списком -->
<div id="listViewContainer" class="hidden space-y-6">
    @foreach (var computer in Model)
    {
        <div class="computer-card bg-dark-card rounded-2xl p-6 border border-gray-800 hover:border-primary/50 transition duration-300">
            <div class="flex flex-col lg:flex-row lg:items-center gap-6">
                <div class="flex-shrink-0">
                    @if (!string.IsNullOrEmpty(computer.ImageUrl))
                    {
                        <div class="w-32 h-32 bg-gradient-to-br from-primary/20 to-primary/10 rounded-xl flex items-center justify-center">
                            <img src="/Images/@computer.ImageUrl" alt="@computer.Name" 
                                 class="w-full h-full object-contain rounded-xl"/>
                        </div>
                    }
                    else
                    {
                        <div class="w-32 h-32 bg-gradient-to-br from-gray-800 to-gray-700 rounded-xl flex items-center justify-center">
                            <span class="text-gray-500 text-2xl">🖥️</span>
                        </div>
                    }
                </div>
                <div class="flex-grow">
                    <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between mb-3">
                        <div>
                            <h3 class="text-xl font-bold text-white mb-1">
                                <a href="@Url.Action("ComputerDetails", "Home", new { id = computer.Id })" class="hover:text-primary transition duration-200">
                                    @computer.Name
                                </a>
                            </h3>
                            <p class="text-gray-400 text-sm line-clamp-1">@computer.Description</p>
                        </div>
                        <div class="flex items-center gap-2 mt-2 lg:mt-0">
                            @if (computer.Price < 150000)
                            {
                                <span class="bg-gradient-to-r from-primary to-green-400 text-dark px-3 py-1 rounded-full text-sm font-bold">ХИТ</span>
                            }
                            <div class="text-2xl font-bold text-primary">@computer.Price.ToString("C")</div>
                        </div>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                        <div class="flex items-center text-gray-300">
                            <span class="w-2 h-2 bg-primary rounded-full mr-3"></span>
                            <span class="text-gray-400">В наличии:</span>
                            <span class="text-white ml-2">@computer.Quantity шт.</span>
                        </div>
                    </div>
                </div>
                <div class="flex-shrink-0">
                    <button class="w-full lg:w-auto bg-gradient-to-r from-primary to-green-400 text-dark px-6 py-3 rounded-lg font-bold hover:shadow-lg hover:shadow-primary/25 transition duration-300 add-to-cart"
                            data-computer-id="@computer.Id" 
                            data-computer-name="@computer.Name">
                        В корзину
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-12">
        <div class="text-6xl mb-4">🔍</div>
        <h3 class="text-xl font-bold text-white mb-2">Компьютеры не найдены</h3>
        <p class="text-gray-400">Попробуйте изменить параметры поиска</p>
    </div>
}
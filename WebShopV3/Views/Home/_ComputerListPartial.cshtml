@model List<WebShopV3.Models.Computer>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4>Компьютеры не найдены</h4>
        <p>Попробуйте изменить параметры поиска или фильтры.</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var computer in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 computer-card">
                    @if (!string.IsNullOrEmpty(computer.ImageUrl))
                    {
                        <img src="~/images/@computer.ImageUrl" class="card-img-top" alt="@computer.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span class="text-muted">Нет изображения</span>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@computer.Name</h5>
                        <p class="card-text flex-grow-1">@computer.Description</p>
                        
                        @if (computer.ComputerComponents.Any())
                        {
                            <div class="mb-2">
                                @foreach (var comp in computer.ComputerComponents.Take(3))
                                {
                                    <span class="badge bg-secondary component-badge" title="@comp.Component.Name">
                                        @comp.Component.Type
                                    </span>
                                }
                                @if (computer.ComputerComponents.Count > 3)
                                {
                                    <span class="badge bg-light text-dark component-badge">
                                        +@(computer.ComputerComponents.Count - 3)
                                    </span>
                                }
                            </div>
                        }
                        
                        <div class="mt-auto">
                            <p class="card-text">
                                <strong class="text-primary">@computer.Price.ToString("C")</strong>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">В наличии: @computer.Quantity шт.</small>
                            </p>
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("ComputerDetails", "Home", new { id = computer.Id })" class="btn btn-primary">Подробнее</a>
                                @if (computer.Quantity > 0)
                                {
                                    <button class="btn btn-success btn-sm add-to-cart" 
                                            data-computer-id="@computer.Id" 
                                            data-computer-name="@computer.Name">
                                        <i class="bi bi-cart-plus"></i> В корзину
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-outline-secondary btn-sm" disabled>Нет в наличии</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Статистика -->
    <div class="mt-3 text-muted">
        <small>Найдено компьютеров: @Model.Count</small>
    </div>
}
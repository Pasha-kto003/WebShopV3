@model WebShopV3.Models.Computer
@{
    ViewData["Title"] = Model.Name;
}

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="~/images/@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" style="max-height: 500px; object-fit: cover;">
        }
        else
        {
            <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 400px;">
                <span class="text-muted">Нет изображения</span>
            </div>
        }
    </div>
    <div class="col-md-6">
        <h1>@Model.Name</h1>
        <p class="lead">@Model.Description</p>
        <h3 class="text-primary">@Model.Price.ToString("C")</h3>
        <p class="@(Model.Quantity > 0 ? "text-success" : "text-danger")">
            @(Model.Quantity > 0 ? $"В наличии: {Model.Quantity} шт." : "Нет в наличии")
        </p>
        
        @if (Model.ComputerComponents.Any())
        {
            <div class="mb-4">
                <h4>Комплектующие:</h4>
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Комплектующее</th>
                                <th>Тип</th>
                                <th>Цена</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var comp in Model.ComputerComponents)
                            {
                                <tr>
                                    <td>@comp.Component.Name</td>
                                    <td><span class="badge bg-secondary">@comp.Component.Type</span></td>
                                    <td>@comp.Component.Price.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <td colspan="2"><strong>Сумма комплектующих:</strong></td>
                                <td><strong>@Model.ComputerComponents.Sum(cc => cc.Component.Price).ToString("C")</strong></td>
                            </tr>
                            <tr class="table-active">
                                <td colspan="2"><strong>Наценка (10%):</strong></td>
                                <td><strong>@((Model.ComputerComponents.Sum(cc => cc.Component.Price) * 0.1m).ToString("C"))</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        }
        
        <div class="mt-4">
            @if (Model.Quantity > 0)
            {
                <div class="d-flex gap-2 align-items-center mb-3">
                    <label for="quantity">Количество:</label>
                    <input type="number" id="quantity" class="form-control" style="width: 100px;" value="1" min="1" max="@Model.Quantity">
                </div>
                <button class="btn btn-success btn-lg add-to-cart-details" 
                        data-computer-id="@Model.Id" 
                        data-computer-name="@Model.Name">
                    <i class="bi bi-cart-plus"></i> Добавить в корзину
                </button>
            }
            else
            {
                <button class="btn btn-secondary btn-lg" disabled>Нет в наличии</button>
            }
            <a href="@Url.Action("Catalog", "Home")" class="btn btn-outline-secondary">Назад к каталогу</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.add-to-cart-details').on('click', function() {
                const computerId = $(this).data('computer-id');
                const computerName = $(this).data('computer-name');
                const quantity = $('#quantity').val();

                addToCart(computerId, quantity, computerName);
            });
        });
    </script>
}
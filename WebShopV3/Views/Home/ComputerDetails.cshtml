@model WebShopV3.Models.Computer
@{
    ViewData["Title"] = Model.Name;
}

<div class="min-h-screen bg-dark pt-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Хлебные крошки -->
        <nav class="flex mb-8" aria-label="Breadcrumb">
            <ol class="flex items-center space-x-2 text-sm">
                <li>
                    <a asp-controller="Home" asp-action="Index" class="text-gray-400 hover:text-white transition duration-200">Главная</a>
                </li>
                <li class="flex items-center">
                    <span class="text-gray-600 mx-2">/</span>
                    <a asp-controller="Home" asp-action="Catalog" class="text-gray-400 hover:text-white transition duration-200">Каталог</a>
                </li>
                <li class="flex items-center">
                    <span class="text-gray-600 mx-2">/</span>
                    <span class="text-primary">@Model.Name</span>
                </li>
            </ol>
        </nav>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
            <!-- Левая колонка - Галерея -->
            <div>
                <!-- Главное изображение -->
                <div class="bg-dark-card rounded-2xl p-6 border border-gray-800 mb-4">
                    <div class="relative aspect-square rounded-xl overflow-hidden bg-gradient-to-br from-primary/20 to-primary/10 flex items-center justify-center">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img id="mainImage" src="/Images/@Model.ImageUrl" 
                                 alt="@Model.Name" class="w-full h-full object-cover transition duration-500">
                        }
                        else
                        {
                            <div class="w-full h-full flex items-center justify-center">
                                <span class="text-gray-500 text-6xl">🖥️</span>
                            </div>
                        }
                        @if (Model.Price < 150000)
                        {
                            <div class="absolute top-4 right-4 bg-gradient-to-r from-primary to-green-400 text-dark px-3 py-1 rounded-full text-sm font-bold">
                                ХИТ
                            </div>
                        }
                        <div class="absolute top-4 left-4 @(Model.Quantity > 0 ? "bg-green-500/20 text-green-400" : "bg-red-500/20 text-red-400") px-3 py-1 rounded-full text-sm font-bold">
                            @(Model.Quantity > 0 ? $"В наличии: {Model.Quantity} шт." : "Нет в наличии")
                        </div>
                    </div>
                </div>

                <!-- Миниатюры -->
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="grid grid-cols-4 gap-4">
                        <button class="aspect-square rounded-xl bg-dark-card border border-gray-700 hover:border-primary transition duration-200 overflow-hidden thumbnail-button"
                                data-image-src="/Images/@Model.ImageUrl">
                            <img src="/Images/@Model.ImageUrl" 
                                 alt="@Model.Name" class="w-full h-full object-cover">
                        </button>
                        <div class="aspect-square rounded-xl bg-dark-card border border-gray-700 flex items-center justify-center">
                            <span class="text-gray-500 text-sm">🔄</span>
                        </div>
                        <div class="aspect-square rounded-xl bg-dark-card border border-gray-700 flex items-center justify-center">
                            <span class="text-gray-500 text-sm">📐</span>
                        </div>
                        <div class="aspect-square rounded-xl bg-dark-card border border-gray-700 flex items-center justify-center">
                            <span class="text-gray-500 text-sm">🎨</span>
                        </div>
                    </div>
                }

                <!-- Дополнительная информация -->
                <div class="mt-8 grid grid-cols-2 gap-4 text-sm">
                    <div class="flex items-center text-gray-400">
                        <svg class="w-5 h-5 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                        </svg>
                        Гарантия 3 года
                    </div>
                    <div class="flex items-center text-gray-400">
                        <svg class="w-5 h-5 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                        </svg>
                        Тестирование 48ч
                    </div>
                    <div class="flex items-center text-gray-400">
                        <svg class="w-5 h-5 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                        </svg>
                        Бесплатная доставка
                    </div>
                    <div class="flex items-center text-gray-400">
                        <svg class="w-5 h-5 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        Поддержка 24/7
                    </div>
                </div>
            </div>

            <!-- Правая колонка - Информация -->
            <div>
                <div class="bg-dark-card rounded-2xl p-8 border border-gray-800">
                    <!-- Заголовок и цена -->
                    <div class="mb-6">
                        <h1 class="text-3xl md:text-4xl font-bold text-white mb-2">@Model.Name</h1>
                        <p class="text-xl text-gray-400 mb-4">@Model.Description</p>
                        
                        <div class="flex items-center gap-4 mb-4">
                            <div class="text-3xl font-bold text-primary">@Model.Price.ToString("C")</div>
                            @if (Model.ComputerComponents.Any())
                            {
                                var componentsTotal = Model.ComputerComponents.Sum(cc => cc.Component.Price);
                                var markup = componentsTotal * 0.1m;
                                <div class="text-lg text-gray-400 line-through">@((componentsTotal + markup).ToString("C"))</div>
                                <div class="bg-red-500/20 text-red-400 px-3 py-1 rounded-full text-sm font-bold">
                                    -@((int)((1 - Model.Price / (componentsTotal + markup)) * 100))%
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Основные характеристики -->
                    <div class="space-y-4 mb-6">
                        <h3 class="text-lg font-semibold text-white">Ключевые характеристики:</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-3 text-sm">
                            @if (Model.ComputerComponents.Any())
                            {
                                var cpu = Model.ComputerComponents.FirstOrDefault(cc => cc.Component.Type == "Процессор");
                                var gpu = Model.ComputerComponents.FirstOrDefault(cc => cc.Component.Type == "Видеокарта");
                                var ram = Model.ComputerComponents.FirstOrDefault(cc => cc.Component.Type == "Оперативная память");
                                var storage = Model.ComputerComponents.FirstOrDefault(cc => cc.Component.Type == "Накопитель");
                                
                                if (cpu != null)
                                {
                                    <div class="flex items-center text-gray-300">
                                        <span class="w-2 h-2 bg-primary rounded-full mr-3"></span>
                                        <span class="text-gray-400 w-24">Процессор:</span>
                                        <span class="text-white">@cpu.Component.Name</span>
                                    </div>
                                }
                                if (gpu != null)
                                {
                                    <div class="flex items-center text-gray-300">
                                        <span class="w-2 h-2 bg-primary rounded-full mr-3"></span>
                                        <span class="text-gray-400 w-24">Видеокарта:</span>
                                        <span class="text-primary">@gpu.Component.Name</span>
                                    </div>
                                }
                                if (ram != null)
                                {
                                    <div class="flex items-center text-gray-300">
                                        <span class="w-2 h-2 bg-primary rounded-full mr-3"></span>
                                        <span class="text-gray-400 w-24">ОЗУ:</span>
                                        <span class="text-white">@ram.Component.Name</span>
                                    </div>
                                }
                                if (storage != null)
                                {
                                    <div class="flex items-center text-gray-300">
                                        <span class="w-2 h-2 bg-primary rounded-full mr-3"></span>
                                        <span class="text-gray-400 w-24">Накопитель:</span>
                                        <span class="text-white">@storage.Component.Name</span>
                                    </div>
                                }
                            }
                            <div class="flex items-center text-gray-300">
                                <span class="w-2 h-2 bg-primary rounded-full mr-3"></span>
                                <span class="text-gray-400 w-24">В наличии:</span>
                                <span class="text-white">@Model.Quantity шт.</span>
                            </div>
                        </div>
                    </div>

                    <!-- Кнопки действий -->
                    <div class="space-y-4 mb-6">
                        @if (Model.Quantity > 0)
                        {
                            <div class="flex items-center gap-4 mb-3">
                                <label for="quantity" class="text-gray-300">Количество:</label>
                                <input type="number" id="quantity" 
                                       class="w-20 bg-dark border border-gray-700 rounded-lg px-3 py-2 text-white focus:border-primary focus:ring-1 focus:ring-primary" 
                                       value="1" min="1" max="@Model.Quantity">
                            </div>
                            <button class="w-full bg-gradient-to-r from-primary to-green-400 text-dark py-4 rounded-lg font-bold text-lg hover:shadow-lg hover:shadow-primary/25 transition duration-300 flex items-center justify-center add-to-cart-details"
                                    data-computer-id="@Model.Id" 
                                    data-computer-name="@Model.Name">
                                <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                                </svg>
                                Добавить в корзину
                            </button>
                        }
                        else
                        {
                            <button class="w-full bg-gray-600 text-gray-300 py-4 rounded-lg font-bold text-lg cursor-not-allowed" disabled>
                                Нет в наличии
                            </button>
                        }
                        
                        <div class="grid grid-cols-2 gap-3">
                            <button class="bg-dark border border-gray-700 text-white py-3 rounded-lg font-semibold hover:border-primary transition duration-200">
                                💝 В избранное
                            </button>
                            <a href="@Url.Action("Catalog", "Home")" class="bg-dark border border-gray-700 text-white py-3 rounded-lg font-semibold hover:border-primary transition duration-200 text-center">
                                ← Назад
                            </a>
                        </div>
                    </div>

                    <!-- Быстрая доставка -->
                    <div class="bg-primary/10 border border-primary/20 rounded-lg p-4">
                        <div class="flex items-center text-sm text-primary">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <span class="font-semibold">Быстрая доставка:</span>
                            <span class="ml-1">сборка за 3-5 дней, доставка 1-2 дня</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Таблица комплектующих -->
        @if (Model.ComputerComponents.Any())
        {
            <div class="bg-dark-card rounded-2xl p-8 border border-gray-800 mb-16">
                <h2 class="text-2xl font-bold text-white mb-6">Комплектующие</h2>
                
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead>
                            <tr class="border-b border-gray-700">
                                <th class="text-left py-4 px-4 text-gray-400 font-semibold">Комплектующее</th>
                                <th class="text-left py-4 px-4 text-gray-400 font-semibold">Тип</th>
                                <th class="text-right py-4 px-4 text-gray-400 font-semibold">Цена</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var comp in Model.ComputerComponents)
                            {
                                <tr class="border-b border-gray-800 hover:bg-gray-800/50 transition duration-200">
                                    <td class="py-4 px-4 text-white">@comp.Component.Name</td>
                                    <td class="py-4 px-4">
                                        <span class="bg-gray-700 text-gray-300 px-2 py-1 rounded-full text-xs">@comp.Component.Type</span>
                                    </td>
                                    <td class="py-4 px-4 text-right text-white">@comp.Component.Price.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            @{
                                var totalComponents = Model.ComputerComponents.Sum(cc => cc.Component.Price);
                                var markup = totalComponents * 0.1m;
                            }
                            <tr class="border-t border-gray-700">
                                <td colspan="2" class="py-4 px-4 text-gray-400 font-semibold">Сумма комплектующих:</td>
                                <td class="py-4 px-4 text-right text-white font-semibold">@totalComponents.ToString("C")</td>
                            </tr>
                            <tr>
                                <td colspan="2" class="py-4 px-4 text-gray-400 font-semibold">Наценка (10%):</td>
                                <td class="py-4 px-4 text-right text-white font-semibold">@markup.ToString("C")</td>
                            </tr>
                            <tr class="bg-primary/10">
                                <td colspan="2" class="py-4 px-4 text-primary font-bold">Итоговая цена:</td>
                                <td class="py-4 px-4 text-right text-primary font-bold text-lg">@Model.Price.ToString("C")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        }

        <!-- Детальные характеристики -->
        <div class="bg-dark-card rounded-2xl p-8 border border-gray-800 mb-16">
            <h2 class="text-2xl font-bold text-white mb-6">Полные технические характеристики</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @if (Model.ComputerComponents.Any())
                {
                    foreach (var componentGroup in Model.ComputerComponents.GroupBy(cc => cc.Component.Type))
                    {
                        <div>
                            <h3 class="text-lg font-semibold text-primary mb-4 flex items-center">
                                <span class="mr-2">
                                    @(componentGroup.Key switch
                                    {
                                        "Процессор" => "⚙️",
                                        "Видеокарта" => "🎮",
                                        "Оперативная память" => "💾",
                                        "Накопитель" => "💿",
                                        "Материнская плата" => "🔌",
                                        "Блок питания" => "⚡",
                                        "Корпус" => "🏠",
                                        "Охлаждение" => "❄️",
                                        _ => "🔧"
                                    })
                                </span>
                                @componentGroup.Key
                            </h3>
                            <div class="space-y-2 text-sm">
                                @foreach (var comp in componentGroup)
                                {
                                    <div class="flex justify-between">
                                        <span class="text-gray-400">Модель:</span>
                                        <span class="text-white text-right">@comp.Component.Name</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(comp.Component.Description))
                                    {
                                        <div class="flex justify-between">
                                            <span class="text-gray-400">Описание:</span>
                                            <span class="text-white text-right">@comp.Component.Description</span>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>